{
  "name": "@slot-engine/core",
  "version": "0.2.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/slot-engine/slot-engine"
  },
  "homepage": "https://slot-engine.dev/docs/core",
  "scripts": {
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prebuild": "pnpm typecheck && pnpm copy-files",
    "build": "tsup ./index.ts --dts --format cjs,esm --sourcemap",
    "dev": "tsup ./index.ts --dts --format cjs,esm --sourcemap --watch",
    "copy-files": "tsx ../../scripts/copy-core-files.ts"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "chalk": "5.6.2",
    "esbuild": "0.25.9",
    "socket.io-client": "4.8.3",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@types/yargs": "17.0.35"
  }
}